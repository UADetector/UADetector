<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netstandard2.0;net462;net8.0;net9.0;</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>UaDetector</PackageId>
    <PackageVersion>0.1.4</PackageVersion>
    <PackageTags>UaDetector;UserAgent;parser;user-agent-parser;os-detection;browser-detection;client-detection;device-detection;bot-detection;</PackageTags>
    <Description>UaDetector is a user-agent parsing library that identifies the browser, operating system, device, client, and even detects bots.</Description>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Regexes\**\*" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="UaDetector.Tests" />
    <InternalsVisibleTo Include="UaDetector.ReadmeUpdater" />
    <InternalsVisibleTo Include="UaDetector.YamlJsonConverter" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="PolySharp">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="!$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net8.0'))">
    <PackageReference Include="System.Collections.Immutable" />
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>
</Project>
